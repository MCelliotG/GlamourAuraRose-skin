#!/bin/sh
rm -rf /usr/share/enigma2/GlamourAuraRose
if [ -f /usr/share/enigma2/GlamourAuraFHD/skin.xml ] || [ -f /usr/share/enigma2/GlamourAuraLime/skin.xml ] || [ -f /usr/share/enigma2/GlamourAuraMango/skin.xml ] || [ -f /usr/share/enigma2/GlamourAuraBerry/skin.xml ] 
then
echo "Glamour Aura converters and renderers are used by another Glamour skin(s), not removing"
else
rm -rf /usr/lib/enigma2/python/Components/Converter/Glam*
rm -rf /usr/lib/enigma2/python/Components/Renderer/Glam*
fi
echo "                                                                    "
echo "Glamour Aura Rose skin was successfully removed from your receiver  "
echo "                                                                    "
echo "The GUI of your receiver is now rebooting....                       "
sleep 5
init 4 && sleep 5 && init 3
